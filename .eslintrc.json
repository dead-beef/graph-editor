{
	"root": true,
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 6,
		"ecmaFeatures": {
			"jsx": true
		},
		"sourceType": "module"
	},
	"rules": {
		"indent": [
			"warn",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"no-unused-vars": "warn",
		"no-console": "off",
		"no-mixed-spaces-and-tabs": "off",
		"no-constant-condition": "off"
	},
	"globals": {
		"$": true,
		"d3": true,
		"ge": true,
		"exports": true
	}
}
